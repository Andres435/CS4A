<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="124.0" prefWidth="267.0" styleClass="main-bg" stylesheets="@Stylesheet.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Login">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <AnchorPane prefHeight="111.0" prefWidth="261.0" styleClass="inner-bg" />
    <StackPane>
        <VBox spacing="10.0">
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="109.0" />
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="228.0" minWidth="10.0" prefWidth="189.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <Label styleClass="label-white" text="Username:" textFill="#f6f5f5" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label styleClass="label-white" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="username" promptText="Use &quot;open&quot; to login" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <TextField fx:id="password" promptText="Use &quot;sesame&quot; to login" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </GridPane>
            <StackPane prefHeight="-1.0" prefWidth="-1.0">
                <Button fx:id="loginButton" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#login" text="Login" StackPane.alignment="CENTER_RIGHT" />
            </StackPane>
        </VBox>
    </StackPane>
</StackPane>
